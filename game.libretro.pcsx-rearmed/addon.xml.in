<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.pcsx-rearmed"
		name="PlayStation (PCSX ReARMed)"
		version="22.0.0"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.ps" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>PlayStation</platforms>
		<extensions>bin|cue|img|mdf|pbp|toc|cbn|m3u</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<supports_keyboard>false</supports_keyboard>
		<supports_mouse>false</supports_mouse>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">PlayStation (PCSX ReARMed) r22</summary>
		<description>PCSX ReARMed is another PCSX fork based on the PCSX-Reloaded project, which itself contains code from PCSX, PCSX-df and PCSX-Revolution. This version features a MIPS-&gt;ARM recompiler, NEON GTE code and more performance improvements.

Supported files: .bin, .cue, .img, .mdf, .pbp, .toc, .cbn, .m3u</description>
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
	</extension>
</addon>